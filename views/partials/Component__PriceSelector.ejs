<%# [Price Selector Component] _%>
<%# URL: String _%>
<%# sizes: Array _%>

            <div class="card border-0 row m-2">
              <div class="card border-0 col">
              <%_ sizes.forEach((size, i) => { _%>
                <span onclick="select(this)" class="price-selector mt-2 border d-flex justify-content-center align-items-center rounded-circle d-block align-self-center<%_ if(i === 0) { %> active <%_ } _%><%_ if(sizes.length <= 1) { %> invisible <%_ } _%>"><%- size %></span>
              <%_ }); _%>
              </div>
                <div class="col text-center">
                  <h3 id="price" class="m-4"></h3>
                  <form action="/cart/add" method="GET">
                    <input id="category" name="category" type="hidden" value="">
                    <input id="item" name="item" type="hidden" value="" />
                    <input id="size" name="size" type="hidden" value="" />
                    <input type="submit" class="p-2 btn-primary btn-lg rounded" value="Add to Order" />
                  </form>
                </div>
            </div>
           <script>
            function select(el) {
              const size =  el.textContent;

              if(size !== 0) {
                $('.active').toggleClass('active');
                el.classList.toggle('active'); // can i use ajax here?
              }

              $.ajax({
                method: "POST",
                async: true,
                url: "/menu<%- URL %>",
                contentType: "application/json",
                data: JSON.stringify({size}),
                success: function(res) {
                  $('#price').text("$"+res.price);
                  $('#size').val(res.size);
                  $('#item').val(res.item);
                  $('#category').val(res.category);
                  $('#count').val(res.count);
                }
                
              });
            }
            </script>