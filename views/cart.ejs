<%# [Cart Page] _%>
<%# Cart: Array _%>

  <h1>Your Cart
  <%_ if(Cart.length === 0) { _%>
    ... is empty :(
  <%_ } _%></h1>  
  <%_ Cart.items.forEach((item, idx) => { _%>      
    <%- include("tiles/Cart", { item, idx, count: item.count }); %>
  <%_ }); _%>
  <div class="button-container">
    <a href="/Menu" style="width: 140px;" class="btn btn-lg btn-primary m-1">Go to Menu</a>
    <%_ if(Cart.length > 0) { _%>
    <form action="/order/checkout" method="POST">
      <button type="submit" class="btn btn-lg btn-primary m-1 float-right" style="width: 140px;">Checkout</button>
    </form>
      <button id="empty-cart-button" class="btn btn-lg btn-primary m-1 float-left" style="width: 140px;">Empty Cart</button>
  </div>
  <div style="clear: both;"></div>
  <!-- A bit old school but oh well -->
  <div style="float: right;" class="p-2">
    <h3>Total: </h3>    
    <h1>$<%- Cart.totalPrice %></h1>
  </div>
  <%_ } _%>
 
  </div>
  <div style="clear: right;"></div>
  <script src="/js/cart.js"></script>
